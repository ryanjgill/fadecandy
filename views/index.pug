html
    head
        title= appTitle
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        link(href='https://code.getmdl.io/1.3.0/material.indigo-pink.min.css', rel='stylesheet')
        link(href='/css/main.css', rel='stylesheet')
    body
        .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
            header.mdl-layout__header
                .mdl-layout__header-row
                    span.mdl-layout-title FadeCandy NeoPixel Demo
                    .mdl-layout-spacer
                    nav.mdl-navigation.mdl-layout--large-screen-only
                        a.mdl-navigation__link(href='http://www.misc.name/fadecandy') FadeCandy
            .mdl-layout__drawer
                span.mdl-layout-title NeoPixel Demo
                hr
                nav.mdl-navigation
                    a.mdl-navigation__link(href='http://www.misc.name/fadecandy') FadeCandy
            main.mdl-layout__content
                .page-content
                    // Your content goes here
                    h3 Select a color
                    hr
                    div.color
                        input(type='color', class='colorPicker')
                    h3 Actions
                    hr
                    div.actions
                        button(id='chargeUp', class='mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary') Charge Up
                        button(id='turnOff', class='mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary') Turn Off
                    h3 
                        span Pixels
                        span.totalPixels.mdl-color--primary #{totalPixels}
                    hr
                    input(type="range" id="pixelCount" class="mdl-slider mdl-js-slider" min="1" max=totalPixels value=totalPixels)
        
        script.
            window.__pixelCount = !{JSON.stringify(totalPixels)}
            window.__startingColor = !{JSON.stringify(startingColor)}

        script(src="/js/socket.io.min.js")
        script(src="/js/jquery.min.js")
        script(async, defer, src="/js/material.min.js")
        script(async, defer, src="/js/index.js")